{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": false,
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    // "noImplicitAny": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    "noImplicitUseStrict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "outDir": "build",
    // "pretty": true,
    "removeComments": true,
    "target": "esnext"
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
